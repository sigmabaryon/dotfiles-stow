[user]
    name     = Shrey Sonar
    email    = shreysonar13@gmail.com
    username = sigmabaryon

[init]
    defaultBranch = main

[include]
    path = ~/.local/src/themes.gitconfig

[core]
    editor     = nvim
    pager      = delta
    whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true
    ; features = chameleon
    true-color = always

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default
